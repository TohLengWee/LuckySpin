@model LuckySpin.Models.Register.Registration
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" >

<head>
    <meta charset="UTF-8">
    <title>Sign Up Lucky Spin</title>
    <link rel="stylesheet" href="/Content/register.css" />
</head>

<body>

@using (Html.BeginForm("Index", "Register", FormMethod.Post))
{
    <h2>Sign Up</h2>
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <p>
        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "floatLabel" })
        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
        @*@Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })*@
    </p>
    <p>
        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "floatLabel" })
        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })*@
    </p>
    <p>
        @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "floatLabel" })
        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })*@
    </p>
    <p>
        @Html.LabelFor(model => model.Bank, htmlAttributes: new { @class = "floatLabel" })
        @Html.EnumDropDownListFor(model => model.Bank, "-- silakan pilih bank --", new { @class = "form-control" })
        @*@Html.ValidationMessageFor(model => model.Bank, "", new { @class = "text-danger" })*@
    </p>
    <p>
        @Html.LabelFor(model => model.BillNumber, htmlAttributes: new { @class = "floatLabel" })
        @Html.EditorFor(model => model.BillNumber, new { htmlAttributes = new { @class = "form-control" } })
        @*@Html.ValidationMessageFor(model => model.BillNumber, "", new { @class = "text-danger" })*@
    </p>
    <p>
        @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "floatLabel" })
        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
        @*@Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })*@
    </p>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Register" class="btn btn-default"/>
        </div>
    </div>
}
</body>
</html>